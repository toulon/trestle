mixin formGroup(model, field)
  - var error = hasError(model, field);
  .form-group(class=error?'has-error':'')
    block

mixin label(field, title)
  label.control-label.col-md-2(for=field)= title

mixin password(field, value)
  input.form-control(type="password", id=field, name=field, value=value)

mixin text(field, value)
  input.form-control(type="text", id=field, name=field, value=value)

mixin textarea(field, value)
  textarea.form-control(id=field, name=field, rows="5")= value

mixin number(field, value)
  input.form-control(type="number", id=field, name=field, value=value)

mixin boolean(field, value)
  input.form-control(type="checkbox", id=field, name=field, checked=value)

mixin date(field, value)
  input.form-control(type="date", id=field, name=field, value=dateAsValue(value))

mixin datetime(field, value)
  input.form-control(type="datetime", id=field, name=field, value=value)

mixin errorMessage(model, field)
  !{errorFor(model, field)}

// @param values Array Contains arays with two values, first is the value, second is the label
mixin selectSingle(field, value, values)
  select.form-control(name=field)
    each val in values
      if val[0] == value
        option(value=val[0], selected=true)=val[1]
      else
        option(value=val[0])=val[1]
